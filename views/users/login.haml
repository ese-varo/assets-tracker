%h1 Login
- if @error
  %p= @error
%form(action="/login" method="post")
  %fieldset
    %legend Login
    != csrf_tag
    %label(for="username")
      Username:
      %input(type="text" name="username" required)
    %label(for="password")
      Password:
      %input(type="password" name="password" required)

  %button(type="submit") Submit
%form(action="/signup")
  != csrf_tag
  %button(type="submit") Signup
