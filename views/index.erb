<h1>Assets Listing</h1>
<a href="/assets/new">Add new asset</a>
<ul>
  <% @assets.each do |a| %>
    <% available = a['available'] == 1 ? true : false %>
    <li>
      <p>
        Asset Type: <%= a['type'] %> </br>
        Serial Number: <%= a['serial_number'] %> </br>
        Available: <%= available ? 'Yes' : 'No' %> </br>
        <% unless available %>
          User: <%= a['username'] %>
        <% end %>
        <a href="/assets/<%= a['id'] %>/edit">Edit</a>
      </p>
    </li>
  <% end %>
</ul>
